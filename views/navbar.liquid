{% block content %}
  <nav class="navbar navbar-expand-md navbar-dark bg-dark">
    <div class="container-fluid ms-3">
      <a href="/" class="navbar-brand">AIC Visit</a>
      <button
        class="navbar-toggler"
        type="button"
        data-bs-toggle="collapse"
        data-bs-target="#navbarNav"
        aria-controls="navbarNav"
        aria-expanded="false"
        aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <a href="/arts" class="ms-2 nav-link text-light">Art</a>
        {% if loggedIn %}
          <a href="/user/newGallery" class="ms-2 nav-link text-light">New Gallery</a>
          <a href="/auth/logout" class="ms-2 nav-link text-light">Log Out</a>
        {% else %}
          <a href="/auth/signup" class="ms-2 nav-link text-light">Sign Up</a>
          <a href="/auth/login" class="ms-2 nav-link text-light">Sign In</a>
        {% endif %}
        <form action="/arts/?q={{ nameTBF }}" method="GET">
        <input style="width: 160px; height: 40px; border-radius: 10px; "  class="ms-3 mt-3" type="text" name="q" placeholder="Search Art..."><input type="submit" class="btn btn-success" value="Search" style="width: 80px; height: 40px; margin-bottom: 10px; border-radius: 10px"></form>
        {% if loggedIn %}
          <a href="/user/" class="nav-link text-light btn btn-primary" style="width: 80px; height: 40px; margin-bottom: 10px; border-radius: 10px">Hi,  <i>{{ username }}</i>
          </a>
        {% endif %}
      </div>
    </div>
  </nav>
{% endblock %}